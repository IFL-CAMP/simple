// Schema for S.I.M.P.L.E. Image

namespace simple_msgs;

union data {dataUInt8, dataInt16, dataFloat, dataDouble}

table dataUInt8{
	img:[uint8];
}

table dataInt16{
	img:[short];
}

table dataFloat{
	img:[float];
}

table dataDouble{
	img:[double];
}

table ImageFbs{
	enconding:string;
	origin:[ubyte];
	resX:double;
	resY:double;
	resZ:double;
	width:int;
	height:int;
	depth:int;
	imgData:data;
	Header:[ubyte];
}

root_type ImageFbs;
file_identifier "IMAG";