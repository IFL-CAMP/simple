# - Config file for the simple package
# It defines the following variables
#  SIMPLE_FOUND
#  SIMPLE_PATH - root of the SIMPLE library installation
#  SIMPLE_INCLUDE_DIRS - include directories for simple
#  SIMPLE_LIBRARIES    - libraries to link against

# Compute paths
set(SIMPLE_CMAKE_DIR ${CMAKE_CURRENT_LIST_DIR})

set(SIMPLE_INCLUDE_DIRS "@CONF_INCLUDE_DIRS@")

# Our library dependencies (contains definitions for IMPORTED targets)
include("${SIMPLE_CMAKE_DIR}/simpleTargets.cmake")

# These are IMPORTED targets created by simpleTargets.cmake
get_target_property(SIMPLE_LIBRARIES simple INTERFACE_LINK_LIBRARIES)


if (NOT ${SIMPLE_CMAKE_DIR} STREQUAL "")
	get_filename_component(SIMPLE_PATH ${CMAKE_CURRENT_LIST_DIR} DIRECTORY)
	if(NOT WIN32)
		get_filename_component(SIMPLE_PATH ${SIMPLE_PATH} DIRECTORY)
		get_filename_component(SIMPLE_PATH ${SIMPLE_PATH} DIRECTORY)
	endif()
	set(SIMPLE_FOUND TRUE)
	message(STATUS "SIMPLE Found: ${SIMPLE_PATH}")
else()
	message(FATAL_ERROR "SIMPLE NOT FOUND!")
endif()




